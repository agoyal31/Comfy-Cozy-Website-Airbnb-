<div class="box">
  <div class="center">
    <h1>sign-up</h1>
    <p>Fill this form to create an account.</p>
    <form method="post" action="/sign-up">

        <div class="inputbox">
          <label for="firstName"></label>
        <input type="text" id="firstName" name = "firstName" placeholder="First Name" value="{{values.firstName}}"/><br>
        {{#if toDisplayValidationMessage.firstName}}
        <span style="color:red;">{{toDisplayValidationMessage.firstName}}</span><br>
        {{/if}}
        </div>
      
      <div class="inputbox">
        <label for="lastName"></label>
        <input type="text" id="lastName" name = "lastName" placeholder="Last Name" value="{{values.lastName}}"/><br>
         {{#if toDisplayValidationMessage.lastName}}
        <span style="color:red;">{{toDisplayValidationMessage.lastName}}</span><br>
        {{/if}}
      </div>

      <div class="inputbox">
        <label for="email"></label>
        <input type="text" id="email" name = "email" placeholder="Email" value="{{values.email}}"/><br>
        {{#if toDisplayValidationMessage.email}}
        <span style="color:red;">{{toDisplayValidationMessage.email}}</span><br>
        {{/if}}
      </div>
      
      <div class="inputbox">
        <label for="password"></label>
        <input type="password" id="password" name = "password" placeholder="Password" value="{{values.password}}"/><br>
        {{#if toDisplayValidationMessage.password}}
        <span id = "wrap-it" style="color:red;">{{toDisplayValidationMessage.password}}</span><br>
        {{/if}}
      </div>
      
      <div class="inputbox">
        <input type="submit" value="sign-up" />
      </div>
    </form>
  </div>
</div>